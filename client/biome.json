{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*.{ts,tsx,js,jsx}"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"useImportType": "on",
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"useExhaustiveDependencies": "off"
			},
			"a11y": {
				"useButtonType": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5",
			"semicolons": "always"
		}
	}
}
