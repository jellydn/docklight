{
	"name": "docklight-server",
	"version": "0.0.1",
	"description": "Docklight backend server",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch index.ts",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"start": "node dist/index.js",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"better-sqlite3": "^12.6.2",
		"cookie-parser": "^1.4.7",
		"express": "^5.0.0",
		"jsonwebtoken": "^9.0.3",
		"pino": "^10.3.1",
		"pino-http": "^11.0.0",
		"ws": "^8.19.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cookie-parser": "^1.4.10",
		"@types/express": "^5.0.0",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^20.10.0",
		"@types/pino-http": "^6.1.0",
		"@types/supertest": "^6.0.2",
		"@types/ws": "^8.18.1",
		"@vitest/coverage-v8": "^4.0.0",
		"supertest": "^7.0.0",
		"tsx": "^4.6.2",
		"typescript": "^5.3.2",
		"vitest": "^4.0.0"
	}
}
